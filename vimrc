
set nocompatible

filetype off


syntax on


filetype plugin indent on


set modelines=0

set number
set ruler

set visualbell
set encoding=utf-8

set nowrap
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab


set hidden

set ttyfast

set showmode
set showcmd

set mouse=

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

colorscheme desert

set cursorline
hi CursorLine cterm=bold term=bold
